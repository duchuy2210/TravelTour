<h1 class="text-center">Tạo một tour mới</h1>
<a href="/" style="margin-left:250px" class="btn btn-secondary mb-3">Trở về</a>
<form method="POST" action="/tours/create_new_tour" style="width:70%; margin: 0 auto">
    <div class="mb-3">
      <label class="form-label">Tour Name:</label>
      <input type="text" class="form-control" name="tourname">
    </div>
    <div class="mb-3">
      <label class="form-label">Time:</label>
      <input type="text" class="form-control" name="time">
    </div>
    <div class="mb-3">
      <label class="form-label">Cost:</label>
      <input type="number" class="form-control" name="cost">
    </div>
    <div class="mb-3">
      <label class="form-label">Route:</label>
      <input type="text" class="form-control" name="route">
    </div>
    
    <button style="margin-left:900px" type="submit" class="btn btn-primary">Submit</button>
</form>