<div class="container-fluid">
    <div class="d-flex">
        <a href="/tours/create_page" class="btn btn-primary mb-3">Tạo mới</a>
    </div>
    <table class="table table-striped table-info table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tour Name</th>
                <th scope="col">Time</th>
                <th scope="col">Cost</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <% for(var i=0; i < dataUser.length; i++) { %>
        <tbody>
            <tr>
                <th scope="row"><%= dataUser[i].id %></th>
                <td><%= dataUser[i].tourName %></td>
                <td><%= dataUser[i].time %></td>
                <td><%= dataUser[i].cost %></td>
                <td>
                    <a href="/tours/detail_tour/<%= dataUser[i].id %>" class="btn btn-primary" type="button">More Details</a> 
                    <a href="/tours/edit_tour/<%= dataUser[i].id %>" class="btn btn-warning" type="button">Edit</a> 
                    <form action="/tours/delete_tour" method="post">
                        <button class="btn btn-danger" type="submit">Delete</button>
                        <input type="text" hidden value="<%= dataUser[i].id %>" name="tourId">
                    </form>
                </td>
                
            </tr>
        </tbody>
        <% } %>
    </table>
</div>
